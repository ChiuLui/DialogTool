<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:minHeight="200dp"
    android:layout_gravity="center"
    android:layout_marginHorizontal="50dp"
    android:background="@drawable/fillet_all_ffffff_10"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingVertical="25dp"
        android:includeFontPadding="false"
        tools:text="标题"
        android:textColor="#000000"
        android:background="@drawable/fillet_top_f5f5f5_10"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="#FF232323"
        tools:text="内容"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <View
        android:id="@+id/view_center"
        style="@style/divider_gray_horizontal"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginVertical="22dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            tools:text="左边"
            android:background="@drawable/fillet_all_ff4b91f4_5"/>



        <TextView
            android:id="@+id/tv_right"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textColor="#FFFFFF"
            tools:text="右边"
            android:background="@drawable/fillet_all_cccccc_5"
            android:textSize="14sp"
            android:layout_marginLeft="26dp"
            android:visibility="visible"/>
    </LinearLayout>

</LinearLayout>